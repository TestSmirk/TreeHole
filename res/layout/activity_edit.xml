<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
   
    tools:context=".EditActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/et_edit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:inputType="textMultiLine"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_edit"
           
            android:gravity="top"
            android:lines="10" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:id="@+id/RelativeLayou"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_edit_edit"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_edit_textNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="0/200" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_edit_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="8dp"
       android:text="发送"
        android:background="@drawable/bt_bg"
        android:textColor="@android:color/white"
        />

    <Spinner
        android:id="@+id/sp_edit_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1" 
       android:layout_alignBaseline="@+id/bt_edit_submi"
      
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp_edit_spinner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sp_edit_spinner"
       android:textSize="16dp"
       android:gravity="center"
        android:text="人最大的烦恼就是记性太好\n\n如果可以所有的事情都忘记\n\n以后的每日都有一个新的开始\n\n那你说这有多开心   --《东邪西毒》" />

</RelativeLayout>