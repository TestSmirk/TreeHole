<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp" 
    >
<RelativeLayout 
    android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/pop_bg"
    >
     <RelativeLayout 
       android:id="@+id/forest_r1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="16dp">
        <com.tarena.utils.ImageCircleView
            android:id="@+id/forest_userLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_head" />

         <TextView
             android:id="@+id/forest_userName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/forest_userLogo"
             android:layout_centerVertical="true"
             android:text="跟着感觉走" />
       <TextView
            android:id="@+id/forest_Time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="刚刚"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
           />
     
   </RelativeLayout>
         <TextView 
           android:id="@+id/forest_userContent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:layout_below="@+id/forest_r1"
       android:paddingBottom="16dp"
      android:layout_margin="8dp"
           android:layout_centerHorizontal="true"
           
           />
</RelativeLayout>
  
         
</RelativeLayout>